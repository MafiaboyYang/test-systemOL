<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zjut.dao.title.TitleDao">
    <resultMap type="com.zjut.pojo.Title" id="BaseResultMap">
        <id property="itemId" jdbcType="INTEGER" column="id"/>
        <result property="content" jdbcType="VARCHAR" column="content"/>
        <result property="answer" jdbcType="VARCHAR" column="answer"/>
        <result property="courseId" jdbcType="INTEGER" column="course_id"/>
        <result property="difficulty" jdbcType="VARCHAR" column="difficulty"/>
        <result property="userId" jdbcType="INTEGER" column="user_id"/>
        <result property="time" jdbcType="VARCHAR" column="time"/>
        <result property="picture" jdbcType="VARCHAR" column="picture"/>
        <result property="lockd" jdbcType="INTEGER" column="lockd"/>
        <result property="labelId" jdbcType="INTEGER" column="label_id"/>
        <result property="type" jdbcType="VARCHAR" column="type"/>
    </resultMap>

    <resultMap id="labelMap" type="String">
        <id property="id" jdbcType="INTEGER" column="id" />
        <result property="labelContent" jdbcType="VARCHAR" column="content"/>
    </resultMap>

    <!-- 根据标签查询题目 -->
    <select id="queryItemByLabel" resultMap="BaseResultMap">
        SELECT * FROM question
        where
        <if test="labelId != null and labelId != ''">
            label_id=#{labelId} AND lockd != 1
        </if>
    </select>

    <!-- 根据难度查询题目 -->
    <select id="queryItemByDifficulty" resultMap="BaseResultMap" >
        SELECT * FROM question
        where
        <if test="difficulty != null and difficulty != ''">
            difficulty=#{difficulty} AND lockd != 1
        </if>
    </select>

    <!-- 新增题目 -->
    <insert id="addItem" parameterType="com.zjut.pojo.Title">
        INSERT INTO question
        (content, answer, course_id, difficulty, user_id, `time`, picture, lockd, label_id, `type`)
        VALUES
        (#{content}, #{answer}, #{courseId}, #{difficulty}, #{userId},
        #{time}, #{picture}, #{lockd}, #{labelId}, #{type})
    </insert>

    <!-- 修改题目内容 -->
    <update id="updateItem" parameterType="com.zjut.pojo.Title">
        UPDATE question
        SET
        <if test="itemId != null">
            content = #{content},
            answer = #{answer},
            course_id = #{courseId},
            difficulty = #{difficulty},
            user_id = #{userId},
            `time` = #{time},
            picture = #{picture},
            lockd = #{lockd},
            label_id = #{labelId},
            `type` = #{type}
        </if>
        WHERE
        id = #{itemId}
    </update>

    <!-- 锁定题目 -->
    <update id="lockItem">
        UPDATE question
        <set>
            lockd = 1
        </set>
        WHERE lockd != 1 AND id = #{itemId}
    </update>

    <!-- 解锁题目 -->
    <update id="unlockItem">
        UPDATE question
        <set>
            lockd = 0
        </set>
        WHERE lockd != 0 AND id = #{itemId}
    </update>

    <!-- 查看所有题目 -->
    <select id="listTitles" resultMap="BaseResultMap" >
        SELECT *
        FROM question
    </select>

    <!-- 按id查询题目 -->
    <select id="queryTitleById" resultMap="BaseResultMap" >
        SELECT * FROM question
        where
        id=#{titleId} AND lockd != 1
    </select>

    <!--搜索标签内容-->
    <select id="queryLabelById" resultType="String">
        select content from label
        WHERE
        id = #{labelId}
    </select>

    <!--搜索课程名-->
    <select id="queryCourseNameById" resultType="String">
        select `name` from course
        WHERE
        id = #{courseId}
    </select>

    <!--搜索用户名-->
    <select id="queryUserNameById" resultType="String">
        select username from `user`
        WHERE
        id = #{userId}
    </select>
</mapper>